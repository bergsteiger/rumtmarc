unit Core.Obj;

interface

type
 TCoreObject = class
   protected
    procedure Cleanup; virtual;
   public
    destructor Destroy; override;
 end;

implementation

destructor TCoreObject.Destroy;
begin
  Cleanup;
  inherited;
end;

procedure TCoreObject.Cleanup;
begin
  // - тут ничего не делаем, потомки всё сделают
end;

end.
