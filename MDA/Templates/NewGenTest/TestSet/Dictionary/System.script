: strings:Cat
 // - складывает строки массива на стеке

 : DoCat STRING IN aStr1 STRING IN aStr2
  aStr1 aStr2 Cat
 ;
 
 ARRAY Tmp
 >>> Tmp
 '' @ DoCat ITERATE Tmp
;

: array:HasString [] IN anArray STRING IN aString
 VAR l_Result
 false >>> l_Result
 TRY
 
  : Поиск STRING IN anItem
   anItem aString SameStr IF
    true >>> l_Result
    BREAK-ITERATOR
   ENDIF
  ;
  
  @ Поиск ITERATE anArray
 FINALLY
  l_Result
 END
; //array:HasString

: array:HasText [] IN anArray STRING IN aString
 VAR l_Result
 false >>> l_Result
 TRY
 
  : Поиск STRING IN anItem
   anItem aString SameText IF
    true >>> l_Result
    BREAK-ITERATOR
   ENDIF
  ;
  
  @ Поиск ITERATE anArray
 FINALLY
  l_Result
 END
; //array:HasText

: array:StringCount [] IN anArray STRING IN aString
 VAR l_Result
 0 >>> l_Result
 TRY
 
  : Поиск STRING IN anItem
   anItem aString SameStr IF
    l_Result ++ >>> l_Result
   ENDIF
  ;
  
  @ Поиск ITERATE anArray
 FINALLY
  l_Result
 END
; //array:StringCount

